<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vortex TV"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />
    </LinearLayout>

    <!-- Botón para instalar APK -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInstallApk"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="Install APK"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@id/rvVirtualApps"
        android:nextFocusRight="@id/btnVirtualizeSystemApp"
        android:background="@drawable/btn_gradient_primary"
        app:backgroundTint="@null"
        android:stateListAnimator="@animator/scaler"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_download"
        app:iconGravity="start"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toStartOf="@id/btnVirtualizeSystemApp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón NUEVO: Virtualizar App del Sistema -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVirtualizeSystemApp"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="System Apps"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@id/rvVirtualApps"
        android:nextFocusLeft="@id/btnInstallApk"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_gradient_secondary"
        app:backgroundTint="@null"
        android:stateListAnimator="@animator/scaler"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_apps_grid"
        app:iconGravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Grilla de aplicaciones virtuales -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVirtualApps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:nextFocusUp="@id/btnInstallApk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        tools:listitem="@layout/item_virtual_app" />

    <!-- Mensaje cuando no hay apps -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0.3"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="#94A3B8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No hay aplicaciones instaladas"
            android:textColor="#94A3B8"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Presiona '+' para instalar APKs"
            android:textColor="#64748B"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ProgressBar para operaciones en curso -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
