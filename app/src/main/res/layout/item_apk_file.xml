<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:stateListAnimator="@animator/scaler"
    app:cardBackgroundColor="@color/primary_light"
    app:strokeColor="@color/accent_focus"
    app:strokeWidth="0dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_save"
            android:tint="#60A5FA" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvApkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#F1F5F9"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="application.apk" />

            <TextView
                android:id="@+id/tvApkPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="start"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#64748B"
                android:textSize="12sp"
                tools:text="/storage/emulated/0/Download/" />

            <TextView
                android:id="@+id/tvApkSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                tools:text="12.5 MB" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
