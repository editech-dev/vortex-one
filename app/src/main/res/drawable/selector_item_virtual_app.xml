<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado cuando el item tiene foco - SOLO BORDE, SIN FONDO -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke 
                android:width="6dp" 
                android:color="#FCD34D"/>
            <corners android:radius="12dp"/>
            <!-- NO solid = transparente, se ve el contenido -->
        </shape>
    </item>
    
    <!-- Estado cuando estÃ¡ presionado - borde azul -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke 
                android:width="6dp" 
                android:color="#3B82F6"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
    <!-- Estado normal - completamente transparente -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    
</selector>
